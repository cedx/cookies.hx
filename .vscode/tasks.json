{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Clean"]
		},
		{
			"label": "Dist",
			"group": {"kind": "build", "isDefault": true},
			"type": "shell", "command": "lix", "args": ["Dist"]
		},
		{
			"label": "Doc",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Doc"]
		},
		{
			"label": "Install",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Install"]
		},
		{
			"label": "Lint",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Lint"]
		},
		{
			"label": "Publish",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Publish"]
		},
		{
			"label": "Test",
			"group": {"kind": "test", "isDefault": true},
			"problemMatcher": ["$haxe", "$haxe-absolute", "$haxe-error", "$haxe-trace"],
			"type": "hxml", "file": "test.hxml"
		},
		{
			"label": "Version",
			"group": "build",
			"type": "shell", "command": "lix", "args": ["Version"]
		}
	]
}
